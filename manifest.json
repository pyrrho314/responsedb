{
   "manifest_version": 2,
   "name": "ResponderDB",
   "short_name":"d.t",
   "author": "mcwcam",
   "version": "9.0.271.0",
   
   "description":"ResponseDB Chrome Extension allows responding to youtube videos with other videos. A discourse technology.", 
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },
   
   "permissions": [ "tabs",
                    "http://www.youtube.com/*", 
                    "https://www.youtube.com/*", 
                    "http://gdata.youtube.com/*", 
                    "https://gdata.youtube.com/*",
                    "http://novem9.com/*",
                    "https://novem9.com/*",
                    "*://apis.google.com/*",
                    "*://*.novem9.org/"
                  ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "web_accessible_resources": [ "ajax-loader.gif", "icon48.png", "icon128.png","icon.png", "arrowUp.png", "arrowDown.png" ],
	 "background": {
      "scripts": [ "jquery.js", 
      				"context.js",
      				"novem.js", 
      				"morsels.js",
      				"n9spider.js",
      				"background.js",
      				"yt_iface.js"]
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title":  "Keeps track of responses to videos."
   },
   "content_scripts": [ {
      "css": [
                "novem.css",
                "summarizeResponses.css"
             ], 
      "js": [   "jquery.js",
                "jquery-ui.js",
                "context.js",
                "novem.js",
                "morsels.js",
                "n9spider.js",
                "content_scripts.js",
                "summarizeResponses.js",
                "responder.js"],
      "matches": [  "*://www.youtube.com/*"
                 ],
   	  "all_frames":true
   } ]
   
}
